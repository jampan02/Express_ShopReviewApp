<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../../_share/metadata.ejs") %>

    <title>Document</title>
    <%- include("../../_share/stylesheets.ejs") %>
    <link rel="stylesheet" href="/public/stylesheets/index.css" />
  </head>
  <body>
    <div class="outframe">
      <%- include("../../_share/navbar.ejs") %>
      <main role="main" class="container">
        <div class="border-bottom my-5">
          <h1>口コミの投稿</h1>
        </div>
        <div>
          <form>
            <input
              type="hidden"
              id="shopId"
              name="shopId"
              value="<%= shopId %>"
            />
            <div class="form-group row">
              <label for="shopName" class="col-sm-2 col-form-label"
                >店舗名</label
              >
              <div class="col-sm-10">
                <input
                  readonly
                  type="text"
                  class="form-control-plaintext"
                  id="shopName"
                  name="shopName"
                  value="<%= shopName %>"
                />
              </div>
            </div>
            <div class="form-group row">
              <label for="visit" class="col-sm-2 col-form-label">訪問日</label>
              <div class="col-sm-10">
                <input readonly type="text" class="form-control" id="visit"
                name="visit" value="<%= review.visit ?
                moment(review.visit).format("YYYY/MM/DD") : null %>" />
              </div>
            </div>
            <div class="form-group row">
              <label for="score" class="col-sm-2 col-form-label">評価</label>
              <div class="col-sm-10">
                <input
                  readonly
                  type="text"
                  class="form-control"
                  id="score"
                  name="score"
                  value="<%= review.score %>"
                />
              </div>
            </div>
            <div class="form-group row">
              <label for="inputPassword" class="col-sm-2 col-form-label"
                >本文</label
              >
              <div class="col-sm-10">
                <textarea
                  readonly
                  class="form-control"
                  name="description"
                  id="description"
                  rows="5"
                >
				<%= review.description || "" %>
			</textarea
                >
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-10">
                <input
                  type="submit"
                  value="修正"
                  data-method="POST"
                  data-action="/account/reviews/regist/<%= shopId %>"
                  class="btn btn-primary"
                />
                <input
                  type="submit"
                  value="登録"
                  data-method="POST"
                  data-action="/account/reviews/regist/execute"
                  class="btn btn-primary"
                />
              </div>
            </div>
          </form>
        </div>
      </main>

      <%- include("../../_share/footer.ejs") %>
    </div>

    <%- include("../../_share/javascripts.ejs")%>
    <script src="/public/javascripts/regist.js"></script>
  </body>
</html>
