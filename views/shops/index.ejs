<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../_share/metadata.ejs") %> <%-
    include("../_share/stylesheets.ejs") %>
    <link rel="stylesheet" href="/public/stylesheets/shop.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="outerframe">
      <%- include("../_share/footer.ejs") %>
      <main class="container">
        <div class="border-bottom mb-5 mt-5">
          <h1 class="display-4"><%= name %></h1>
          <p class="h3">
            <span class="rate-star" style="--rate: <%= (score/5.00) * 100 %>%">
            </span>
            <span><%= padding(score) %></span>
          </p>
        </div>
        <div>
          <img
            class="img-fluid"
            src="/public/images/dummy/1150x250.png"
            alt=""
          />
        </div>
        <div class="row">
          <div class="col-md-8">
            <h2 class="border-bottom mt-5 mb-2">
              <i class="fa fa-fw fa-book"> </i>
              店舗情報
            </h2>
            <table class="table table-bordered">
              <colgroup>
                <col class="bg-light" style="width: 10rem" />
                <col />
              </colgroup>
              <tr>
                <th>店名</th>
                <td><%= name %></td>
              </tr>
              <tr>
                <th>カテゴリー</th>
                <td><%= categories %></td>
              </tr>
              <tr>
                <th>電話</th>
                <td><%= tel %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= address %></td>
                <div id="mapid"></div>
              </tr>
              <tr>
                <th>定休日</th>
                <td><%= holiday %></td>
              </tr>
              <tr>
                <th>座席数</th>
                <td><%= seats %></td>
              </tr>
              <tr>
                <th>価格帯</th>
                <td><%= price_range %></td>
              </tr>
            </table>
            <div>
              <div class="position-relative">
                <h2 class="border-bottom mt-5 mb-5 pb-2">
                  <i class="fa fa-fw fa-comments"> </i>
                  口コミ
                </h2>
                <div class="position-absolute" style="right: 0; top: 0">
                  <a
                    class="btn btn-outline-success"
                    href="/account/reviews/regist/<%= id %>
					"
                    >投稿する</a
                  >
                </div>
              </div>
              <div>
                <% for(var review of reviews){ %> <% review.shop=id %> <%-
                include("./review.ejs",review) %> <% } %>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <h2 class="border-bottom mt-5 mb-5 pd-2">
              <i class="fa fa-fw fa-heart"> </i>
              おススメのお店
            </h2>
          </div>
        </div>
      </main>
      <%- include("../_share/navbar.ejs") %>
    </div>

    <%- include("../_share/javascripts.ejs")%>
  </body>
</html>
